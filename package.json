{
  "name": "github-actions-cdk",
  "version": "0.0.11",
  "description": "A TypeScript library for creating and managing GitHub Actions workflows using Constructs, enabling type-safe and modular CI/CD automation.",
  "keywords": [
    "github",
    "actions",
    "cdk",
    "typescript",
    "python",
    "workflow",
    "ci",
    "cd",
    "automation",
    "constructs",
    "github-actions"
  ],
  "author": {
    "name": "hupe1980",
    "organization": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hupe1980/github-actions-cdk.git"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "typesVersions": {
    "<=3.9": {
      "./lib/*": ["./lib/.types-compat/ts3.9/*", "./lib/.types-compat/ts3.9/*/index.d.ts"]
    }
  },
  "scripts": {
    "build": "jsii",
    "build:watch": "jsii --watch",
    "clean": "rimraf dist lib",
    "package": "jsii-pacmak",
    "prepare": "npm run build",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "test": "jest",
    "example:typescript": "ts-node examples/typescript/workflowsrc.ts",
    "example:python": "python3 examples/python/workflowsrc.py",
    "publish:npm": "./scripts/publish-npm.sh",
    "publish:pypi": "./scripts/publish-pypi.sh"
  },
  "bundledDependencies": ["yaml"],
  "peerDependencies": {
    "constructs": "^10.4.2"
  },
  "dependencies": {
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.9",
    "constructs": "10.4.2",
    "jest": "^29.7.0",
    "jsii": "^5.5.4",
    "jsii-pacmak": "^1.104.0",
    "jsii-release": "^0.2.906",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "stability": "experimental",
  "jsii": {
    "diagnostics": {
      "JSII5018": "message"
    },
    "outdir": "dist",
    "tsc": {
      "outDir": "./lib",
      "rootDir": "./src"
    },
    "targets": {
      "python": {
        "module": "github_actions_cdk",
        "distName": "github-actions-cdk"
      }
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.dev.json"
        }
      ]
    },
    "moduleFileExtensions": ["ts", "js", "json", "node"],
    "testMatch": ["**/__tests__/**/*.ts?(x)", "**/?(*.)+(spec|test).ts?(x)"],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageProvider": "v8"
  }
}
