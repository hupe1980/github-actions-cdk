{
    "name": "root",
    "private": true,
    "workspaces": {
        "packages": [
            "examples/*",
            "examples/typescript/*",
            "packages/*",
            "packages/@github-actions-cdk/*"
        ]
    },
    "scripts": {
        "build": "npm run build --workspaces --if-present",
        "clean": "npm run clean --workspaces --if-present",
        "package": "npm run package --workspaces --if-present",
        "prepare": "npm run prepare --workspaces --if-present",
        "lint": "npm run lint --workspaces --if-present",
        "lint:fix": "npm run lint:fix --workspaces --if-present",
        "test": "npm run test --workspaces --if-present",
        "example:typescript:flat": "npm run build --workspace=examples-typescript-flat",
        "example:typescript:nested": "npm run build --workspace=examples-typescript-nested",
        "example:typescript:aws-cdk": "npm run build --workspace=examples-typescript-aws-cdk"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.7.9",
        "jest": "^29.7.0",
        "jsii": "^5.5.4",
        "jsii-pacmak": "^1.104.0",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.5",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3"
    }
}
